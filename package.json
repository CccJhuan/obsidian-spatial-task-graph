{
    "name": "obsidian-spatial-task-graph",
    "version": "1.1.0",
    "description": "Visualize your Obsidian tasks on an infinite canvas. Features auto-layout, mind-map style connections, Apple-style UI, and two-way sync with markdown files.",
    "main": "main.js",
    "type": "module",
    "scripts": {
        "dev": "node esbuild.config.mjs",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "version": "node version-bump.mjs && git add manifest.json versions.json",
        "lint": "eslint ."
    },
    "keywords": [
        "obsidian",
        "obsidian-plugin",
        "task-management",
        "spatial-canvas",
        "mind-map"
    ],
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "9.30.1",
        "@types/node": "^16.11.6",
        "@types/react": "^19.2.14",
        "@types/react-dom": "^19.2.3",
        "esbuild": "0.25.5",
        "eslint-plugin-obsidianmd": "0.1.9",
        "globals": "14.0.0",
        "jiti": "2.6.1",
        "obsidian": "latest",
        "tslib": "2.4.0",
        "typescript": "^5.8.3",
        "typescript-eslint": "8.35.1"
    },
    "dependencies": {
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "reactflow": "^11.11.4"
    }
}
